@model MojeTreningi.Models.DodajPlanTreningowyViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <hr />

    <div class="form-horizontal">

        <input type="hidden" value=@Model.PlanTreningowyID name="PlanTreningowyID" />
        <input type="hidden" value=@Model.Krok name="Krok" />

        <div class="form-group">
            @Html.LabelFor(model => model.NazwaPlanu, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NazwaPlanu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NazwaPlanu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CzyPrywatny, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.CzyPrywatny)
                    @Html.ValidationMessageFor(model => model.CzyPrywatny, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}