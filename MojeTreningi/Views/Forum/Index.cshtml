@model IEnumerable<MojeTreningi.Models.Kategoria>

@{
    ViewBag.Title = "Index";
}

<table class="table">

    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    <h4>@Html.ActionLink(item.Nazwa, "Tematy", new { id = item.ID })</h4>
                </td>
            </tr>
        }
    }
    else
    {
        <h2>Brak danych!</h2>
    }
</table>

@if (Context.User.IsInRole("Admin"))
{
    @Html.ActionLink("Dodaj nową kategorię", "DodajKategorie")
}