@model MojeTreningi.Models.DodajTematViewModel

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("DodajTemat", "Forum", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>@ViewBag.KategoriaNazwa</h2>
        <h3>Dodaj nowy temat</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <input type="hidden" name="Temat.KategoriaID" value="@ViewBag.KategoriaID" />

        <div class="form-group">
            @Html.LabelFor(model => model.Temat.Nazwa, "Nazwa", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Temat.Nazwa, new { htmlAttributes = new { @class = "form-control", @style = "width: 500px !important;" } })
                @Html.ValidationMessageFor(model => model.Temat.Nazwa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Komentarz.Tresc, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Komentarz.Tresc, new { htmlAttributes = new { @class = "form-control col-md-10", @style = "width: 500px !important;" } })
                @Html.ValidationMessageFor(model => model.Komentarz.Tresc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Tematy", new { id = @ViewBag.KategoriaID })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
