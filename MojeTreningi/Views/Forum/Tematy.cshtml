@model IEnumerable<MojeTreningi.Models.Temat>

@{
    ViewBag.Title = "Tematy";
}

@if (Model.Count() > 0)
{
    <table class="table">
        <h2>@Html.DisplayFor(modelItem => Model.First().Kategoria.Nazwa)</h2>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <h4>@Html.ActionLink(item.Nazwa, "Temat", new { id = item.ID })</h4>
                </td>
            </tr>

        }
    </table>
}
else
{
    <h2>Brak danych!</h2>
}

@if (Request.IsAuthenticated)
{
    @Html.ActionLink("Dodaj nowy temat", "DodajTemat", new { id = @ViewBag.ID })
}